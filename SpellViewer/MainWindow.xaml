<Window x:Class="SpellViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpellViewer"
        mc:Ignorable="d"
        Title="MainWindow" Height="287.333" Width="533.333">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="textSearch" Height="23" Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" TextChanged="textSearch_TextChanged"/>
        <GridSplitter x:Name="gridSplitter" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Stretch" Width="5"/>
        <ListBox x:Name="listItems" Margin="10,38,10,10" SelectionChanged="listItems_SelectionChanged"/>
        <RichTextBox x:Name="textDescription" Grid.Column="1" Margin="10" VerticalScrollBarVisibility="Visible" />

    </Grid>
</Window>
